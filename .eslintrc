{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "rules": {
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "react/jsx-quotes": 0,
        "jsx-quotes": [2, "prefer-double"],
        "comma-dangle": [2, "never"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "id-length": [2, {"min": 1, "properties": "never"}],
        "no-console": 0,
        "new-cap": 0
    },
    "plugins": [
        "react"
    ]
}